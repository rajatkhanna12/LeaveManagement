@model List<LeaveManagement.Models.LeaveRequest>

@{
    ViewData["Title"] = "My Leaves";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="page-container mt-5">
    <div class="header-card d-flex justify-content-between align-items-center px-4 py-3 mb-4">
        <div>
            <h3 class="fw-bold mb-0 text-primary">
                <i class="bx bx-leaf me-2"></i> My Leave Applications
            </h3>
            <p class="text-muted small mb-0">View all your applied leaves and their current status</p>
        </div>
        <a asp-action="ApplyLeave" class="btn btn-gradient-primary px-4 py-2 shadow-sm">
            <i class="bx bx-plus-circle me-2"></i>Apply Leave
        </a>
    </div>

    <div class="glass-card p-0">
        <div class="table-wrapper p-3">
            <div class="table-responsive rounded-4 overflow-hidden">
                <table class="table align-middle table-borderless mb-0">
                    <thead class="table-header">
                        <tr>
                            <th>#</th>
                            <th>Leave Type</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Half Day</th>
                            <th>Status</th>
                            <th>Applied On</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            foreach (var leave in Model)
                            {
                                <tr class="data-row">
                                    <td class="fw-semibold">@count</td>
                                    <td class="fw-semibold">@leave.LeaveType?.Name</td>
                                    <td>@leave.StartDate.ToString("dd MMM yyyy")</td>
                                    <td>@leave.EndDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <span class="badge bg-light text-dark border px-3 py-1 rounded-pill">
                                            @(leave.IsHalfDay ? "Yes" : "No")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="status-badge @GetStatusClass(leave.Status.ToString())">
                                            @leave.Status
                                        </span>
                                    </td>
                                    <td>@leave.AppliedOn.ToString("dd MMM yyyy")</td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4 text-muted">
                                    <i class="bx bx-info-circle fs-5 me-2"></i> No leave records found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f3f4f7 0%, #e7ebf0 100%);
        font-family: 'Inter', sans-serif;
    }

    .page-container {
        max-width: 1100px;
        margin: auto;
    }

    .header-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #5c6bc0, #3949ab);
        color: white !important;
        border: none;
        border-radius: 8px;
        transition: 0.3s;
    }

        .btn-gradient-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(92,107,192,0.4);
        }

    .glass-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(10px);
        border-radius: 1rem;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.06);
        overflow: hidden;
    }

    .table-wrapper {
        border-radius: 1rem;
        overflow: hidden;
    }

    .table-header {
        background: #f8f9fc;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #eef1f5;
    }

    table {
        border-collapse: separate;
        border-spacing: 0;
        width: 100%;
    }

        table thead tr:first-child th:first-child {
            border-top-left-radius: 15px;
        }

        table thead tr:first-child th:last-child {
            border-top-right-radius: 15px;
        }

        table tbody tr:last-child td:first-child {
            border-bottom-left-radius: 15px;
        }

        table tbody tr:last-child td:last-child {
            border-bottom-right-radius: 15px;
        }

    .data-row {
        transition: all 0.2s ease-in-out;
    }

        .data-row:hover {
            background: #f3f5ff;
            transform: scale(1.01);
        }

    .status-badge {
        display: inline-block;
        padding: 0.4rem 0.9rem;
        border-radius: 25px;
        font-size: 0.85rem;
        font-weight: 600;
        color: white;
        text-transform: capitalize;
    }

        .status-badge.success {
            background: #4CAF50;
        }

        .status-badge.warning {
            background: #FFC107;
            color: #000;
        }

        .status-badge.danger {
            background: #F44336;
        }

        .status-badge.secondary {
            background: #9E9E9E;
        }
</style>

@functions {
    public string GetStatusClass(string status) => status switch
    {
        "Approved" => "success",
        "Rejected" => "danger",
        "Pending" => "warning",
        _ => "secondary"
    };
}
