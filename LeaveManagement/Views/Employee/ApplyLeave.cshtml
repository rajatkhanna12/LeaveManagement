<div class="card">
    <div class="container mt-5">
        <!DOCTYPE html>
        <html lang="en">
        <head>
            <meta charset="UTF-8">
            <title>Apply Leave</title>
            <meta name="viewport" content="width=device-width, initial-scale=1">

            <style>
                body {
                    font-family: "Segoe UI", sans-serif;
                    background: #f5f6fb;
                    margin: 0;
                    padding: 30px;
                }

                .container {
                    max-width: 900px;
                    margin: auto;
                }

                .card {
                    background: #fff;
                    border-radius: 14px;
                    box-shadow: 0 8px 25px rgba(0,0,0,.06);
                    padding: 30px;
                }

                h2 {
                    margin-bottom: 10px;
                    color: #2b2f4c;
                }

                .subtitle {
                    color: #7b7f9a;
                    margin-bottom: 25px;
                }

                .balance-card {
                    background: linear-gradient(135deg,#6c63ff,#7f73ff);
                    color: #fff;
                    padding: 20px;
                    border-radius: 12px;
                    margin-bottom: 25px;
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                    .balance-card h3 {
                        margin: 0;
                        font-size: 18px;
                    }

                    .balance-card span {
                        font-size: 28px;
                        font-weight: bold;
                    }

                .form-row {
                    display: grid;
                    grid-template-columns: 1fr 1fr;
                    gap: 20px;
                    margin-bottom: 20px;
                }

                label {
                    font-size: 14px;
                    color: #444;
                    margin-bottom: 6px;
                    display: block;
                }

                input, textarea, select {
                    width: 100%;
                    padding: 12px 14px;
                    border-radius: 10px;
                    border: 1px solid #ddd;
                    font-size: 14px;
                    outline: none;
                }

                textarea {
                    resize: none;
                    height: 90px;
                }

                .toggle {
                    display: flex;
                    align-items: center;
                    gap: 10px;
                }

                    .toggle input {
                        width: auto;
                    }

                .summary {
                    background: #f3f4ff;
                    border-radius: 10px;
                    padding: 15px;
                    font-size: 14px;
                    margin-top: 10px;
                    color: #333;
                }

                .actions {
                    margin-top: 25px;
                    display: flex;
                    gap: 15px;
                }

                .btn-primary {
                    background: #6c63ff;
                    color: #fff;
                    border: none;
                    padding: 12px 25px;
                    border-radius: 10px;
                    cursor: pointer;
                    font-size: 15px;
                }

                .btn-secondary {
                    background: #e0e0e0;
                    border: none;
                    padding: 12px 25px;
                    border-radius: 10px;
                    cursor: pointer;
                    font-size: 15px;
                }

                @@media(max - width:768px) {
                    .form-row

                {
                    grid-template-columns: 1fr;
                }

                }
            </style>
        </head>

        <body>

            <div class="">
                <div class="">
                    <h2>Apply for Leave</h2>
                    <p class="subtitle">Submit your leave request quickly and easily</p>

                    <!-- Leave Balance -->
                    <div class="balance-card">
                        <h3>Free Leave Balance</h3>
                        <span>@ViewBag.FreeLeaveBal Days</span>
                    </div>
                    <form asp-action="ApplyLeave" method="post" class="row g-3">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">@TempData["Success"]</div>
                        }
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <!-- Dates -->
                    <div class="form-row">
                        <div>
                            <label asp-for="LeaveTypeId">Half Day Type</label>
                            <select asp-for="LeaveTypeId">
                                <option value="">-- Select Leave Type --</option>
                                @foreach (var leaveType in leaveTypes)
                                {
                                    <option value="@leaveType.Id">@leaveType.Name</option>
                                }
                            </select>
                                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                        </div>
                        <div>
                            <label>Start Date</label>
                            <input asp-for="StartDate" type="date" id="startDate">
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                       
                    </div>

                    <!-- Half Day -->
                    <div class="form-row">
                        <div>
                            <label>End Date</label>
                            <input asp-for="EndDate" type="date" id="endDate">
                                <span asp-validation-for="EndDate" class="text-danger"></span>

                        </div>
                        <div class="toggle">
                            <label asp-for="IsHalfDay">Half Day</label>
                            <input asp-for="IsHalfDay" type="checkbox" id="halfDay">
                                <span asp-validation-for="IsHalfDay" class="text-danger"></span>
                        </div>

                        @* <div>
                            <label>Half Day Type</label>
                            <select id="halfType" disabled>
                                <option value="Morning">Morning</option>
                                <option value="Evening">Evening</option>
                            </select>
                        </div> *@
                    </div>

                    <!-- Reason -->
                    <div>
                        <label asp-for="Reason">Reason</label>
                        <textarea asp-for="Reason" placeholder="Enter reason for leave..."></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>

                    <!-- Summary -->
                    <div class="summary" id="summaryText">
                        Total Leave: 0 day(s)
                    </div>

                    <!-- Actions -->
                    <div class="actions">
                            <button type="submit" class="btn-primary">Submit Leave</button>
                        <a asp-action="MyLeaves" class="btn-secondary">Cancel</a>
                    </div>
                    </form>
                </div>
          
            </div>
                

            <script>
                const start = document.getElementById("startDate");
                const end = document.getElementById("endDate");
                const halfDay = document.getElementById("halfDay");
                const halfType = document.getElementById("halfType");
                const summary = document.getElementById("summaryText");

                function calculateDays() {
                    if (!start.value || !end.value) {
                        summary.innerText = "Total Leave: 0 day(s)";
                        return;
                    }

                    const s = new Date(start.value);
                    const e = new Date(end.value);
                    let diff = (e - s) / (1000 * 60 * 60 * 24) + 1;

                    if (halfDay.checked) diff -= 0.5;

                    summary.innerText = `Total Leave: ${diff} day(s)`;
                }

                start.addEventListener("change", calculateDays);
                end.addEventListener("change", calculateDays);

                halfDay.addEventListener("change", () => {
                    // halfType.disabled = !halfDay.checked;
                    calculateDays();
                });
            </script>

        </body>
    </html>
        </div>
        </div>
