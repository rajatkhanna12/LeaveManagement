@{
    var pageTitle = ViewData["Title"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Dashboard</title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f4f6fa;
            font-family: "Inter", sans-serif;
            margin: 0;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 240px;
            background: linear-gradient(180deg, #ef3d3d 0%, #ef3d3d 100%);
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
           /*  border-top-right-radius: 20px;
            border-bottom-right-radius: 20px; */
            overflow: hidden;
            transition: width 0.3s ease;
        }

            .sidebar .logo {
                text-align: center;
                margin: 1.5rem 0;   
            }

                .sidebar .logo img {
                    width: 140px;
                    border-radius: 10px;
                }

            .sidebar a {
                display: flex;
                align-items: center;
                color: #fff;
                text-decoration: none;
                padding: 0.8rem 1rem;
                border-radius: 8px;
              /*   margin: 0.3rem 0.8rem; */
                transition: all 0.2s ease-in-out;
                font-size: 0.95rem;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: rgba(255, 255, 255, 0.2);
                    box-shadow: 0 2px 10px rgba(255, 255, 255, 0.1);
                }

                .sidebar a i {
                    margin-right: 10px;
                    font-size: 1.2rem;
                }

        .sidebar-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            padding: 0.8rem;
            text-align: center;
        }

        .logout-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ff4d4d;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 10px 0;
            width: 100%;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .logout-btn i {
                margin-right: 8px;
            }

            .logout-btn:hover {
                background-color: #e63e3e;
            }

        /* Main content */
        .main-content {
            margin-left: 240px;
            padding: 25px 30px;
            min-height: 100vh;
            transition: margin-left 0.3s ease;
        }

        /* Topbar */
        .topbar {
            background-color: #fff;
            border-radius: 10px;
            padding: 12px 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .topbar h4 {
                margin: 0;
                font-weight: 600;
                color: #333;
            }

        /* User dropdown */
        .user-dropdown {
            position: relative;
            display: inline-block;
            cursor: pointer;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            background-color: #f0f1ff;
            padding: 6px 12px;
            border-radius: 25px;
            transition: all 0.2s;
        }

            .user-info:hover {
                background-color: #e5e7ff;
            }

        .user-avatar {
            width: 38px;
            height: 38px;
            border-radius: 50%;
            object-fit: cover;
        }

        .user-details {
            display: flex;
            flex-direction: column;
            line-height: 1.1;
        }

            .user-details span.name {
                font-weight: 600;
                color: #333;
                font-size: 0.95rem;
            }

            .user-details span.role {
                font-size: 0.8rem;
                color: #777;
            }

        .dropdown-menu-custom {
            display: none;
            position: absolute;
            right: 0;
            top: 55px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 180px;
            z-index: 100;
            overflow: hidden;
            animation: fadeIn 0.2s ease-in-out;
        }

            .dropdown-menu-custom a {
                display: flex;
                align-items: center;
                gap: 8px;
                color: #333;
                text-decoration: none;
                padding: 10px 15px;
                font-size: 0.9rem;
            }

                .dropdown-menu-custom a:hover {
                    background-color: #f0f1ff;
                }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        @@media (max-width: 768px) {
            .sidebar

        {
            width: 200px;
        }

        .main-content {
            margin-left: 200px;
        }

        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <div class="logo">
                <img src="~/assets/img/logo-color.png" alt="Company Logo" />
            </div>

            <a href="/Employee/Dashboard" class="@(pageTitle == "Dashboard" ? "active" : "")"><i class="bi bi-speedometer2"></i> Dashboard</a>
            <a href="/Employee/MyLeaves" class="@(pageTitle == "My Leaves" ? "active" : "")"><i class="bi bi-pencil-square"></i> Leave Sheet</a>
            <a href="/Employee/ApplyLeave" class="@(pageTitle == "Apply for Leave" ? "active" : "")">
                <i class="bi bi-file-earmark-plus"></i> Apply Leave
            </a>
            <a href="/Employee/MyLeaveSummary" class="@(pageTitle == "Leave Summary" ? "active" : "")"><i class="bi bi-hourglass-split"></i> Leave Summary</a>
            <a href="/Employee/SalaryDetail" class="@(pageTitle == "Salary Slip" ? "active" : "")"><i class="bi bi-cash-stack"></i> Salary Detail</a>
            <a href="/Attendance/Index" class="@(pageTitle == "Attendance" ? "active" : "")"><i class="bi bi-calendar-check"></i> Attendance</a>
        </div>

        <div class="sidebar-bottom">
            <a href="/Account/Logout" class="logout-btn"><i class="bi bi-box-arrow-right"></i> Logout</a>
            <p class="small mt-3 mb-0 text-light">© 2025 Business Box</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="topbar">
            <h4>@ViewData["Title"]</h4>

            <div class="user-dropdown">
                <div class="user-info" id="userDropdownBtn">
                    <img src="https://randomuser.me/api/portraits/men/41.jpg" class="user-avatar" />
                    <div class="user-details">
                        <span class="name">@ViewBag.UserName</span>
                        <span class="role">@ViewBag.UserRole</span>
                    </div>
                    <i class="bi bi-caret-down-fill text-muted"></i>
                </div>

                <div class="dropdown-menu-custom" id="dropdownMenu">
                    <a href="#"><i class="bi bi-person"></i> My Profile</a>
                    <a href="#"><i class="bi bi-gear"></i> Settings</a>
                    <a href="/Account/ChangePassword"><i class="bi bi-lock"></i> Change Password</a>
                    <hr class="my-1" />
                    <a href="/Account/Logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
                </div>
            </div>
        </div>

        <!-- ✅ Always RenderBody to prevent errors -->
        <div>
            @if (pageTitle == "Dashboard")
            {
                <div class="card shadow border-0 p-4" style=" border-radius: 18px;">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="fw-bold mb-2">Welcome back Employee..</h4>
                            <p class="mb-3" style="opacity: 0.9;">
                                Great to see you again! You can manage your attendance, leave requests, and salary details all in one place.
                                Let’s make today productive 
                            </p>
                            <a href="/Employee/ApplyLeave" class="btn btn-light btn-sm fw-semibold">
                                <i class="bi bi-calendar-plus me-1"></i> Apply for Leave
                            </a>
                        </div>
                        <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png"
                             alt="Employee Illustration"
                             style="width:100px; height:100px; border-radius:50%; background:#fff; padding:10px;" />
                    </div>
                </div>

            }
            @RenderBody()
        </div>
       
    </div>
    @RenderSection("Scripts", required: false)
    <script>
        const btn = document.getElementById("userDropdownBtn");
        const menu = document.getElementById("dropdownMenu");
        btn.addEventListener("click", () => {
            menu.style.display = menu.style.display === "block" ? "none" : "block";
        });
        window.addEventListener("click", (e) => {
            if (!btn.contains(e.target)) menu.style.display = "none";
        });
    </script>
</body>
</html>
