@{
    var pageTitle = ViewData["Title"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manager Dashboard</title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f4f6fa;
            font-family: "Inter", sans-serif;
            margin: 0;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 240px;
            background: linear-gradient(180deg, #ef3d3d 0%, #ef3d3d 100%);
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            overflow: hidden;
            transition: width 0.3s ease;
        }

            .sidebar .logo {
                text-align: center;
                margin: 1.5rem 0;
            }

                .sidebar .logo img {
                    width: 140px;
                    border-radius: 10px;
                }

            .sidebar a {
                display: flex;
                align-items: center;
                color: #fff;
                text-decoration: none;
                padding: 0.8rem 1rem;
                border-radius: 8px;
                transition: all 0.2s ease-in-out;
                font-size: 0.95rem;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: rgba(255, 255, 255, 0.2);
                    box-shadow: 0 2px 10px rgba(255, 255, 255, 0.1);
                }

                .sidebar a i {
                    margin-right: 10px;
                    font-size: 1.2rem;
                }

        .sidebar-bottom {
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            padding: 0.8rem;
            text-align: center;
        }

        .logout-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #ff4d4d;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 10px 0;
            width: 100%;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .logout-btn i {
                margin-right: 8px;
            }

            .logout-btn:hover {
                background-color: #e63e3e;
            }

        /* Main content */
        .main-content {
            margin-left: 240px;
            padding: 25px 30px;
            min-height: 100vh;
            transition: margin-left 0.3s ease;
        }

        /* Topbar */
        .topbar {
            background-color: #fff;
            border-radius: 10px;
            padding: 12px 20px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .topbar h4 {
                margin: 0;
                font-weight: 600;
                color: #333;
            }

        /* User dropdown */
        .user-dropdown {
            position: relative;
            display: inline-block;
            cursor: pointer;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            background-color: #f0f1ff;
            padding: 6px 12px;
            border-radius: 25px;
            transition: all 0.2s;
        }

            .user-info:hover {
                background-color: #e5e7ff;
            }

        .user-avatar {
            width: 38px;
            height: 38px;
            border-radius: 50%;
            object-fit: cover;
        }

        .user-details {
            display: flex;
            flex-direction: column;
            line-height: 1.1;
        }

            .user-details span.name {
                font-weight: 600;
                color: #333;
                font-size: 0.95rem;
            }

            .user-details span.role {
                font-size: 0.8rem;
                color: #777;
            }

        .dropdown-menu-custom {
            display: none;
            position: absolute;
            right: 0;
            top: 55px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 180px;
            z-index: 100;
            overflow: hidden;
            animation: fadeIn 0.2s ease-in-out;
        }

            .dropdown-menu-custom a {
                display: flex;
                align-items: center;
                gap: 8px;
                color: #333;
                text-decoration: none;
                padding: 10px 15px;
                font-size: 0.9rem;
            }

                .dropdown-menu-custom a:hover {
                    background-color: #f0f1ff;
                }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .main-content {
                margin-left: 200px;
            }
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <div class="logo">
                <img src="~/assets/img/logo-color.png" alt="Company Logo" />
            </div>

            <a href="/Admin/Dashboard" class="@(pageTitle == "Manager Dashboard" ? "active" : "")"><i class="bi bi-speedometer2"></i> Dashboard</a>
            <a href="/Admin/Index" class="@(pageTitle == "Users" ? "active" : "")"><i class="bi bi-people"></i> Users</a>
            <a href="/Admin/AddLeave" class="@(pageTitle == "Apply for Leave" ? "active" : "")"><i class="bi bi-calendar-plus"></i> Apply Leave</a>
            <a href="/Admin/PendingLeaves" class="@(pageTitle == "Leave Requests" ? "active" : "")"><i class="bi bi-hourglass-split"></i> Pending Leave</a>
            <a href="/Admin/RejectedLeaves" class="@(pageTitle == "Rejected Leaves" ? "active" : "")"><i class="bi bi-x-circle"></i> Rejected Leaves</a>
            <a href="/Admin/RemainingLeaves" class="@(pageTitle == "All Users Leave Summary" ? "active" : "")"><i class="bi bi-clipboard-data"></i> Leave Report</a>
            <a href="/Admin/ApprovedLeaves" class="@(pageTitle == "Approved Leaves Requests" ? "active" : "")"><i class="bi bi-check-circle"></i> Approved Leave</a>
            <a href="/Admin/SalaryList" class="@(pageTitle == "Approved Salary list" ? "active" : "")"><i class="bi bi-cash-stack"></i> Approved Salary</a>
            <a href="/Admin/TodayAttendanceReport" class="@(pageTitle == "Manager Attendance Report" ? "active" : "")"><i class="bi bi-calendar-check"></i> Attendance Report</a>
        </div>

        <div class="sidebar-bottom">
            @* <a href="/Account/Logout" class="logout-btn"><i class="bi bi-box-arrow-right"></i> Logout</a> *@
            <p class="small mt-3 mb-0 text-light">© 2025 Business Box</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="topbar">
            <h4>@ViewData["Title"]</h4>

            <div class="user-dropdown">
                <div class="user-info" id="userDropdownBtn">
                    <img src="https://randomuser.me/api/portraits/men/41.jpg" class="user-avatar" />
                    <div class="user-details">
                        <span class="name">@ViewBag.UserName</span>
                        <span class="role">@ViewBag.UserRole</span>
                    </div>
                    <i class="bi bi-caret-down-fill text-muted"></i>
                </div>

                <div class="dropdown-menu-custom" id="dropdownMenu">
                    <a href="#"><i class="bi bi-person"></i> My Profile</a>
                    <a href="#"><i class="bi bi-gear"></i> Settings</a>
                    <a href="/Account/ChangePassword"><i class="bi bi-lock"></i> Change Password</a>
                    <hr class="my-1" />
                    <a href="/Account/Logout"><i class="bi bi-box-arrow-right"></i> Logout</a>
                </div>
            </div>
        </div>

        <div>   
            @RenderBody()
        </div>
    </div>  

    <!-- ✅ Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ DataTables CSS + JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>


    @RenderSection("Scripts", required: false)


    <script>
        const btn = document.getElementById("userDropdownBtn");
        const menu = document.getElementById("dropdownMenu");
        btn.addEventListener("click", () => {
            menu.style.display = menu.style.display === "block" ? "none" : "block";
        });
        window.addEventListener("click", (e) => {
            if (!btn.contains(e.target)) menu.style.display = "none";
        });
    </script>
</body>
</html>
