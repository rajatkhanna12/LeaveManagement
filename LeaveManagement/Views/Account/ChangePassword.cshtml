    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card col-lg-6 col-md-8 col-12">
            <div class="container mt-4 p-6">
                <div class="change-password-card">

                    <div class="text-center mb-4">
                        <div class="icon-circle mb-3">
                            <i class="bx bx-lock-alt"></i>
                        </div>
                        <h4 class="fw-bold mb-1">Change Password</h4>
                        <p class="text-muted small">Secure your account with a new password</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success text-center">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center">@TempData["Error"]</div>
                    }

                    @Html.ValidationSummary(true, "", new { @class = "text-danger text-center mb-3" })

                    <form asp-action="ChangePassword" method="post">

                        <div class="form-group mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <div class="input-wrapper">
                                <input asp-for="CurrentPassword" class="form-control modern-input" type="password" placeholder="Enter current password" />
                                <i class="bx bx-hide toggle-password"></i>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <div class="input-wrapper">
                                <input asp-for="NewPassword" class="form-control modern-input" type="password" placeholder="Enter new password" />
                                <i class="bx bx-hide toggle-password"></i>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-wrapper">
                                <input asp-for="ConfirmPassword" class="form-control modern-input" type="password" placeholder="Confirm new password" />
                                <i class="bx bx-hide toggle-password"></i>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-gradient w-100">
                            Update Password
