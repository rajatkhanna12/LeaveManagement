@model List<LeaveManagement.Models.SalaryReport>
@{
    ViewData["Title"] = "Approved Salary List";
    Layout = "_ManagerLayout";
}

<div class="card shadow-sm border-0 mt-3">
 

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle" id="SalaryList">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Month</th>
                        <th>Year</th>
                        <th>Base Salary</th>
                        <th>Deductions</th>
                        <th>Leave Taken</th>
                        <th>Final Salary</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td class="fw-semibold">
                               
                                @report.User?.UserName
                            </td>
                            <td>@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(report.Month)</td>
                            <td>@report.Year</td>
                            <td><span class="badge bg-success bg-opacity-10 text-success px-3 py-2">₹ @report.BaseSalary.ToString("N2")</span></td>
                            <td><span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2">- ₹ @report.Deductions.ToString("N2")</span></td>
                            <td><span class="badge bg-info bg-opacity-10 text-info px-3 py-2">@report.LeaveTakenThisMonth.ToString("N2")</span></td>
                            <td><strong>₹ @report.FinalSalary.ToString("N2")</strong></td>
                            <td>
                                <a asp-action="SalaryApprove" asp-route-id="@report.Id"
                                   class="btn btn-outline-success btn-sm rounded-pill px-3 modern-approve-btn">
                                    <i class="bi bi-check-circle me-1"></i> Approve
                                </a>


                            </td>
                            <td style="display:none;">@($"{report.Year}{report.Month:D2}")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#SalaryList').DataTable({
                "pageLength": 10,
                "lengthChange": true,
                "ordering": true,
                "info": true,
                "order": [[8, "desc"]],
                "columnDefs": [
                    { "targets": [8], "visible": false }
                ]
            });
        });
    </script>
}


