@model LeaveManagement.Models.LeaveRequest

@{
    ViewData["Title"] = "Update Leave Status";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}



    <style>
        .card {
            border-radius: 18px;
            box-shadow: 0 8px 22px rgba(0, 0, 0, 0.08);
            border: none;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, #6A5AE0, #5146D5);
            color: #fff;
            padding: 1rem 1.5rem;
            font-weight: 600;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .card-header h5 {
                margin: 0;
                font-weight: 600;
            }

        .btn-back {
            background-color: rgba(255, 255, 255, 0.15);
            border: none;
            color: #fff;
            padding: 6px 14px;
            border-radius: 8px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

            .btn-back:hover {
                background-color: rgba(255, 255, 255, 0.25);
            }

        .info-box {
            background: #f8f9ff;
            border: 1px solid #e6e8f5;
            border-radius: 10px;
            padding: 12px 15px;
            margin-bottom: 1rem;
        }

            .info-box label {
                color: #5a5a5a;
                font-weight: 600;
            }

            .info-box span {
                color: #222;
                font-weight: 500;
            }

        .form-label {
            font-weight: 600;
            color: #4a4a4a;
        }

        .form-select {
            border-radius: 10px;
            padding: 10px 12px;
        }

      

    .btn-primary {
        background: linear-gradient(90deg, #667eea, #764ba2);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #5a67d8, #6b46c1);
        }

        .btn-secondary {
            background-color: #f3f4f6;
            color: #333;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #e3e4e8;
            }
    </style>


<div class="container-xxl flex-grow-1 container-p-y">
    <form asp-action="UpdateLeaveStatus" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="card">
                    <!-- Card Header with Title & Back Button -->
                    <div class="card-header">
                        <h5></h5>
                     
                        <a asp-action="PendingLeaves" class="btn btn-light fw-semibold rounded-pill px-4 mt-2 mt-md-0 shadow-sm">
                            <i class="bx bx-left-arrow-alt me-1"></i> Back to List
                        </a>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="info-box">
                            <label>Employee</label><br />
                            <span>@Model.User.FullName</span>
                        </div>

                        <div class="info-box">
                            <label>Leave Type</label><br />
                            <span>@Model.LeaveType.Name</span>
                        </div>

                        <div class="info-box">
                            <label>Date Range</label><br />
                            <span>@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Change Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                         
                            <button type="submit" class="btn btn-primary px-5 rounded-pill shadow-sm">
                                <i class="bx bx-save me-1"></i> Update 
                            </button>
                           
                            <a asp-action="PendingLeaves" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                                <i class="bx bx-x me-1"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
