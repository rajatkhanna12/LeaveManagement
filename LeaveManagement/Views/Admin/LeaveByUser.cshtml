@model IEnumerable<LeaveManagement.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Requests";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";

    var employeeName = Model.FirstOrDefault()?.User?.FullName ?? "Employee";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Leave Requests for <strong>@employeeName</strong></h5>
            </div>
         
            <div class="table-responsive text-nowrap">
                <table class="table table-hover" id="LeaveByUser">
                    <thead>
                        <tr>
                            
                            <th>Leave Type</th>
                            <th>Date Range</th>
                            <th>Half Day</th>
                            <th>Reason</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.LeaveType.Name</td>
                                <td>@item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()</td>
                                <td>@(item.IsHalfDay ? "Yes" : "No")</td>
                                <td>@item.Reason</td>
                                <td>
                                    <span class="badge bg-label-@(item.Status == LeaveStatus.Approved ? "success" :
                                                                                        item.Status == LeaveStatus.Rejected ? "danger" : "warning")">
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                @if (item.Status == LeaveStatus.Pending)
                                    {
                                        <a asp-action="UpdateLeaveStatus" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Update</a>
                                        
                                    }
                                    else
                                    {
                                        <button class="btn btn-sm btn-outline-secondary" disabled>Update</button>
                                    }
                                    <a asp-action="DeleteLeave" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#LeaveByUser').DataTable({
            "pageLength": 10,
            "lengthChange": true,
            "ordering": true,
            "info": true
        });
    });
</script>