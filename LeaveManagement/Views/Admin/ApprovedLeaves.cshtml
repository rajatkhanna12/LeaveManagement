@model IEnumerable<LeaveManagement.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Requests";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <h5 class="card-header">Leave Requests</h5>
            <div class="table-responsive text-nowrap">
                <table class="table table-hover" id="LeaveTable">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Leave Type</th>
                            <th>Date Range</th>
                            <th>Half Day</th>
                            <th>Reason</th>
                            <th>Status</th>
                            <th>Action</th>
                   
                        
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.User.FullName</td>
                                <td>@item.LeaveType.Name</td>
                                <td data-order="@item.StartDate.ToString("yyyy-MM-dd")">
                                    @item.StartDate.ToShortDateString() - @item.EndDate.ToShortDateString()
                                </td>

                                <td>@(item.IsHalfDay ? "Yes" : "No")</td>
                                <td>@item.Reason</td>
                                <td>
                                    <span class="badge bg-label-@(item.Status == LeaveStatus.Approved ? "success" :
                                                                                                                                                      item.Status == LeaveStatus.Rejected ? "danger" : "warning")">
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                <a asp-action="DeleteLeave" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Delete</a>
                            </td>
                          
                        </tr>
                                                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#LeaveTable').DataTable({
            "pageLength": 10,
            "lengthChange": true,
            "ordering": true,
            "info": true,
            "order": [[2, "desc"]] // Date Range = column index 2
        });
    });
</script>